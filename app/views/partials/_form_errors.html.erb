<!-- Универсальный паршиал отображения ошибок валидации любой модели -->

<% errors = model.errors %>

<% if errors.any? %>
    <div class="alert alert-danger">
      <div class="lead buffer-bottom">
        В вашей форме <% Russion::p(errors.count, "ошибка", "ошибок", "ошибки") %>
      </div>

      <ul>
        <% errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>